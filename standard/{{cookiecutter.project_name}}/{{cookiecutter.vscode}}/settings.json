{
    "editor": {
        "rulers": [
            72,
            79
        ]
    },
    "python": {
        "formatting": {
            "provider": "black"
        },
        "linting": {
            "enabled": true,
            "flake8Enabled": true,
            "mypyEnabled": true
        },
        "pythonPath": "",
        "testing": {
            "nosetestsEnabled": false,
            "pytestArgs": [
                "tests"
            ],
            "pytestEnabled": true,
            "unittestEnabled": false
        }
    },

    "files": {

        "exclude": {
            "**/.git": true,
            "**/.svn": true,
            "**/.hg": true,
            "**/CVS": true,
            "**/.DS_Store": true,
            "**/.mypy_cache": true,
            "**/.pytest_cache": true,
            "**/.python-version": true,
            "**/poetry.lock": true,
            "**/Pipfile.lock": true,
            "**/__pycache__": true,
            "**/*.pyc": true
        }
	},

    "workbench.preferredDarkColorTheme": "Tomorrow Night Blue",
    "workbench.colorTheme": "Monokai",
    "workbench.colorCustomizations": {
 
        "editor.selectionBackground": "#e788ff7c",
        "editor.selectionHighlightBackground": "#3b9fc0c7",
        "editor.findMatchBackground": "#00cc44a8",
        "editor.findMatchHighlightBackground": "#ff7b00a1",
        "numberedBookmarks.lineBackground": "#007700",
        "editor.selectionHighlightBorder": "#00000000",
        "tab.activeBorder": "#0A84FF",
        "tab.activeBorderTop": "#0A84FF",
        "tab.unfocusedActiveBorder": "#000000",
        "editor.background": "#000000",
        "editorLineNumber.foreground": "#00c3ff9f",
        "editorCursor.foreground": "#00ff00",
        "editorBracketMatch.background": "#ff0000",
        "editorBracketMatch.border": "#000000",
        "gitlens.trailingLineForegroundColor":"#ff00ea"
        
    }
}
